<section class="pricing-section">
    <div class="container">
        <div class="section-header">
            <span class="section-badge">Pricing</span>
            <h1>Simple, Transparent Pricing</h1>
            <p>Choose the plan that fits your needs. All plans include our core deployment engine.</p>
        </div>

        {{#if canceled}}
        <div class="alert alert-info">
            <p>Payment was cancelled. You can try again when you're ready.</p>
        </div>
        {{/if}}

        <div class="pricing-toggle">
            <span class="toggle-label">Monthly</span>
            <label class="toggle">
                <input type="checkbox" id="billingToggle">
                <span class="toggle-slider"></span>
            </label>
            <span class="toggle-label">Annual <span class="save-badge">Save 20%</span></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrfToken}}">

        <div class="pricing-grid">
            <!-- Basic Plan -->
            <div class="pricing-card">
                <div class="pricing-header">
                    <h3>Basic</h3>
                    <p class="pricing-description">For individual developers and small projects</p>
                </div>
                <div class="pricing-price">
                    <span class="price-currency">$</span>
                    <span class="price-amount" data-monthly="50" data-annual="40">50</span>
                    <span class="price-period">/theme/month</span>
                </div>
                <ul class="pricing-features">
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Bootstrap 3, 4 & 5 support
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Up to 3 themes
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Automatic theme validation
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Email notifications
                    </li>
                    <li class="excluded">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"/>
                            <line x1="6" y1="6" x2="18" y2="18"/>
                        </svg>
                        Priority support
                    </li>
                    <li class="excluded">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"/>
                            <line x1="6" y1="6" x2="18" y2="18"/>
                        </svg>
                        Theme updates
                    </li>
                </ul>
                {{#if isAuthenticated}}
                <button data-checkout data-plan="basic" class="btn-outline btn-block">Get Started</button>
                {{else}}
                <a href="/auth/register?plan=basic" class="btn-outline btn-block">Get Started</a>
                {{/if}}
            </div>

            <!-- Pro Plan -->
            <div class="pricing-card featured">
                <div class="pricing-badge">Most Popular</div>
                <div class="pricing-header">
                    <h3>Pro</h3>
                    <p class="pricing-description">For teams and growing businesses</p>
                </div>
                <div class="pricing-price">
                    <span class="price-currency">$</span>
                    <span class="price-amount" data-monthly="100" data-annual="80">100</span>
                    <span class="price-period">/theme/month</span>
                </div>
                <ul class="pricing-features">
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Everything in Basic
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Up to 10 themes
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Automatic theme updates
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Priority email support (24hr)
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Bootstrap version migration
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Staging environment
                    </li>
                </ul>
                {{#if isAuthenticated}}
                <button data-checkout data-plan="pro" class="btn-primary btn-block">Get Started</button>
                {{else}}
                <a href="/auth/register?plan=pro" class="btn-primary btn-block">Get Started</a>
                {{/if}}
            </div>

            <!-- Enterprise Plan -->
            <div class="pricing-card">
                <div class="pricing-header">
                    <h3>Enterprise</h3>
                    <p class="pricing-description">For organizations with complex needs</p>
                </div>
                <div class="pricing-price">
                    <span class="price-currency">$</span>
                    <span class="price-amount" data-monthly="500" data-annual="400">500</span>
                    <span class="price-period">/theme/month</span>
                </div>
                <ul class="pricing-features">
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Everything in Pro
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Unlimited themes
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Dedicated account manager
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        24/7 phone & chat support
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Azure DevOps integration
                    </li>
                    <li class="included">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        GCWeb / WET compliance
                    </li>
                </ul>
                {{#if isAuthenticated}}
                <button data-checkout data-plan="enterprise" class="btn-outline btn-block">Contact Sales</button>
                {{else}}
                <a href="/contact?plan=enterprise" class="btn-outline btn-block">Contact Sales</a>
                {{/if}}
            </div>
        </div>
    </div>
</section>
