<section class="upload-section">
    <div class="container">
        <div class="upload-card">
            <div class="upload-card-header">
                <h1>Upload Your Bootstrap Theme</h1>
                <p>Supports Bootstrap 3, 4, and 5 themes. Enhanced data model only.</p>
            </div>

            {{#unless canDeploy}}
            <div class="alert alert-warning">
                <p><strong>Theme Limit Reached</strong></p>
                <p>You've used {{themesDeployed}} of {{themesLimit}} themes. <a href="/pricing">Upgrade your plan</a> to deploy more themes.</p>
            </div>
            {{/unless}}

            <form action="/upload" method="POST" enctype="multipart/form-data" class="upload-form">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                
                <div class="upload-area" id="dropZone">
                    <div class="upload-area-content">
                        <div class="upload-icon-large">
                            <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                                <polyline points="17 8 12 3 7 8"/>
                                <line x1="12" y1="3" x2="12" y2="15"/>
                            </svg>
                        </div>
                        <h3 class="upload-text">Drag & drop your theme here</h3>
                        <p>or click to browse files</p>
                        <span class="upload-hint">.zip files up to 50MB</span>
                        <input type="file" id="fileInput" name="themeFile" accept=".zip" required {{#unless canDeploy}}disabled{{/unless}}>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="themeName">Theme Name</label>
                        <input type="text" id="themeName" name="themeName" placeholder="My Awesome Theme" required>
                    </div>
                    <div class="form-group">
                        <label for="bootstrapVersion">Bootstrap Version</label>
                        <select id="bootstrapVersion" name="bootstrapVersion" required>
                            <option value="5">Bootstrap 5</option>
                            <option value="4">Bootstrap 4</option>
                            <option value="3">Bootstrap 3</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" name="category">
                        <option value="other">Other</option>
                        <option value="landing">Landing Page</option>
                        <option value="portfolio">Portfolio</option>
                        <option value="business">Business</option>
                        <option value="blog">Blog</option>
                        <option value="admin">Admin Dashboard</option>
                        <option value="ecommerce">E-Commerce</option>
                    </select>
                </div>

                <button type="submit" class="btn-primary btn-block" {{#unless canDeploy}}disabled{{/unless}}>
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                        <polyline points="17 8 12 3 7 8"/>
                        <line x1="12" y1="3" x2="12" y2="15"/>
                    </svg>
                    Upload & Deploy
                </button>
            </form>

            <div class="upload-requirements">
                <h4>Theme Requirements</h4>
                <ul>
                    <li>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Valid Bootstrap 3, 4, or 5 structure
                    </li>
                    <li>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Include index.html as entry point
                    </li>
                    <li>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        CSS and JS files in organized folders
                    </li>
                    <li>
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"/>
                        </svg>
                        Image assets (jpg, png, svg, webp)
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
