{% comment %}
  Stylish Portfolio Theme - Wizard Style Template
  Based on Start Bootstrap Stylish Portfolio v6.0.6
  Adapted for Power Pages by CloudStrucc
{% endcomment %}

<style>
/* ============================================
   Wizard / Multi-Step Form Styles
   ============================================ */

/* Progress Indicator */
.sp-wizard-progress {
  display: flex;
  justify-content: space-between;
  padding: 0;
  margin: 0 0 2rem 0;
  list-style: none;
  counter-reset: step;
}

.sp-wizard-progress li {
  flex: 1;
  text-align: center;
  position: relative;
}

.sp-wizard-progress li::before {
  content: counter(step);
  counter-increment: step;
  width: 40px;
  height: 40px;
  line-height: 40px;
  border: 2px solid var(--sp-gray);
  display: block;
  text-align: center;
  margin: 0 auto 10px auto;
  border-radius: 50%;
  background-color: var(--sp-white);
  font-weight: 600;
  color: var(--sp-gray);
  transition: all 0.3s ease;
}

.sp-wizard-progress li::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  background-color: var(--sp-gray);
  top: 20px;
  left: -50%;
  z-index: -1;
}

.sp-wizard-progress li:first-child::after {
  content: none;
}

.sp-wizard-progress li.active::before {
  border-color: var(--sp-primary);
  background-color: var(--sp-primary);
  color: var(--sp-white);
}

.sp-wizard-progress li.active::after {
  background-color: var(--sp-primary);
}

.sp-wizard-progress li.completed::before {
  content: '\f00c';
  font-family: 'Font Awesome 6 Free';
  font-weight: 900;
  border-color: var(--sp-primary);
  background-color: var(--sp-primary);
  color: var(--sp-white);
}

.sp-wizard-progress li.completed::after {
  background-color: var(--sp-primary);
}

.sp-wizard-progress li span {
  display: block;
  font-size: 0.875rem;
  color: var(--sp-gray);
}

.sp-wizard-progress li.active span,
.sp-wizard-progress li.completed span {
  color: var(--sp-primary);
  font-weight: 600;
}

/* Step Container */
.sp-wizard-step {
  background-color: var(--sp-white);
  border-radius: 0.5rem;
  padding: 2rem;
  margin-bottom: 1.5rem;
}

.sp-wizard-step-header {
  margin-bottom: 1.5rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid var(--sp-light);
}

.sp-wizard-step-header h2 {
  margin: 0;
  color: var(--sp-primary);
  font-size: 1.5rem;
}

.sp-wizard-step-header p {
  margin: 0.5rem 0 0 0;
  color: var(--sp-gray);
}

/* Validation Header */
#step-validation-header {
  margin-bottom: 1.5rem;
}

#step-validation-header:empty {
  display: none;
}

/* Navigation Buttons */
.sp-wizard-nav {
  display: flex;
  justify-content: space-between;
  padding-top: 1.5rem;
  margin-top: 1.5rem;
  border-top: 1px solid var(--sp-light);
}

.sp-wizard-nav .btn-previous,
.sp-wizard-nav .btn-next {
  min-width: 120px;
}

/* Pager Styling Override */
.pager {
  display: flex;
  justify-content: space-between;
  padding: 1.5rem 0 0 0;
  margin: 1.5rem 0 0 0;
  border-top: 1px solid var(--sp-light);
  list-style: none;
}

.pager li {
  display: inline;
}

.pager li a {
  display: inline-block;
  padding: 0.75rem 1.5rem;
  background-color: var(--sp-primary);
  color: var(--sp-white);
  text-decoration: none;
  border-radius: 0.375rem;
  transition: background-color 0.2s ease;
}

.pager li a:hover {
  background-color: var(--sp-primary-dark);
  text-decoration: none;
}

.pager li.disabled a {
  background-color: var(--sp-gray);
  cursor: not-allowed;
  opacity: 0.65;
}

.pager li.disabled a:hover {
  background-color: var(--sp-gray);
}

.pager .previous a::before {
  content: '\f053';
  font-family: 'Font Awesome 6 Free';
  font-weight: 900;
  margin-right: 8px;
}

.pager .next a::after {
  content: '\f054';
  font-family: 'Font Awesome 6 Free';
  font-weight: 900;
  margin-left: 8px;
}

/* Form Field Groups */
.sp-field-group {
  margin-bottom: 1.5rem;
}

.sp-field-group label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 600;
  color: var(--sp-dark);
}

.sp-field-group .required {
  color: #dc3545;
}

.sp-field-group .form-control {
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: 1rem;
  border: 1px solid #ced4da;
  border-radius: 0.375rem;
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.sp-field-group .form-control:focus {
  border-color: var(--sp-primary);
  outline: 0;
  box-shadow: 0 0 0 0.25rem rgba(29, 128, 159, 0.25);
}

.sp-field-group .help-block {
  display: block;
  margin-top: 0.25rem;
  font-size: 0.875rem;
  color: var(--sp-gray);
}

.sp-field-group .field-validation-error {
  display: block;
  margin-top: 0.25rem;
  font-size: 0.875rem;
  color: #dc3545;
}

/* Responsive */
@media (max-width: 768px) {
  .sp-wizard-progress {
    flex-direction: column;
  }
  
  .sp-wizard-progress li {
    margin-bottom: 1rem;
  }
  
  .sp-wizard-progress li::after {
    display: none;
  }
  
  .sp-wizard-nav {
    flex-direction: column;
    gap: 1rem;
  }
  
  .sp-wizard-nav .btn-previous,
  .sp-wizard-nav .btn-next {
    width: 100%;
  }
  
  .pager {
    flex-direction: column;
    gap: 1rem;
  }
  
  .pager li {
    display: block;
  }
  
  .pager li a {
    display: block;
    text-align: center;
  }
}
</style>
