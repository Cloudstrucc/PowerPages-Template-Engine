{% comment %}
  Stylish Portfolio Theme - Validation Wizard Step Template
  Based on Start Bootstrap Stylish Portfolio v6.0.6
  Adapted for Power Pages by CloudStrucc
  
  This template provides a validation summary placeholder for wizard steps
{% endcomment %}

<div id="step-validation-header" class="sp-validation-container">
  {% comment %} Validation summary will be moved here via JavaScript {% endcomment %}
</div>

<style>
/* Validation Container Styles */
.sp-validation-container:empty {
  display: none;
}

.sp-validation-container {
  margin-bottom: 1.5rem;
}

/* Validation Summary Styling */
.sp-validation-container .validation-summary,
.validation-summary {
  background-color: #fff3cd;
  border: 1px solid #ffeeba;
  border-left: 4px solid #ffc107;
  border-radius: 0.375rem;
  padding: 1rem 1.25rem;
  margin-bottom: 0;
}

.sp-validation-container .validation-summary-errors,
.validation-summary-errors {
  background-color: #f8d7da;
  border: 1px solid #f5c6cb;
  border-left: 4px solid #dc3545;
}

.sp-validation-container .validation-summary h4,
.validation-summary h4 {
  color: #856404;
  font-size: 1rem;
  font-weight: 600;
  margin: 0 0 0.75rem 0;
  display: flex;
  align-items: center;
  gap: 8px;
}

.sp-validation-container .validation-summary h4::before,
.validation-summary h4::before {
  content: '\f071';
  font-family: 'Font Awesome 6 Free';
  font-weight: 900;
}

.sp-validation-container .validation-summary-errors h4,
.validation-summary-errors h4 {
  color: #721c24;
}

.sp-validation-container .validation-summary ul,
.validation-summary ul {
  margin: 0;
  padding-left: 1.5rem;
}

.sp-validation-container .validation-summary li,
.validation-summary li {
  color: #856404;
  margin-bottom: 0.25rem;
  line-height: 1.5;
}

.sp-validation-container .validation-summary-errors li,
.validation-summary-errors li {
  color: #721c24;
}

.sp-validation-container .validation-summary li:last-child,
.validation-summary li:last-child {
  margin-bottom: 0;
}

/* Field Validation Errors */
.field-validation-error {
  display: block;
  color: #dc3545;
  font-size: 0.875rem;
  margin-top: 0.25rem;
}

.field-validation-error::before {
  content: '\f06a';
  font-family: 'Font Awesome 6 Free';
  font-weight: 900;
  margin-right: 6px;
}

/* Input validation states */
.input-validation-error {
  border-color: #dc3545 !important;
  background-color: #fff8f8;
}

.input-validation-error:focus {
  border-color: #dc3545 !important;
  box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25) !important;
}

/* Success validation */
.input-validation-valid {
  border-color: #28a745 !important;
}

.input-validation-valid:focus {
  border-color: #28a745 !important;
  box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25) !important;
}

/* Required field indicator */
.required-field label::after,
label.required::after {
  content: ' *';
  color: #dc3545;
  font-weight: bold;
}

/* Info/Help blocks */
.info-block,
.help-block {
  display: block;
  font-size: 0.875rem;
  color: var(--sp-gray);
  margin-top: 0.25rem;
}

.info-block::before {
  content: '\f05a';
  font-family: 'Font Awesome 6 Free';
  font-weight: 900;
  margin-right: 6px;
  color: var(--sp-primary);
}
</style>
